<Window x:Class="WpfApplication1.Scores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Scores" Height="315.57" Width="437.024" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="#FF0F2123" Offset="1"/>
            <GradientStop Color="#FF486AFF"/>
            <GradientStop Color="#FF1B184B" Offset="0.739"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="225" Margin="10,10,0,0" VerticalAlignment="Top" Width="402" Background="#A5040404" Foreground="White"/>
        <Button x:Name="button" Content="Close" HorizontalAlignment="Left" Margin="337,240,0,0" VerticalAlignment="Top" Width="75" Background="#FF00B9FF" Foreground="White" BorderBrush="{x:Null}" Click="button_Click"/>

    </Grid>
</Window>
